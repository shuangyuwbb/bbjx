<view class="goods-content">
    <view class="goods-item" wx:for="{{list}}" wx:key="index">
        <view class="picture">
            <image src="{{item.main_image}}" />
        </view>
        <view class="title-price">
            <p>{{item.subtitle}}</p>
                
            <view class="price">
                <span>补贴价<span class="price-mark">{{item.price}}</span></span>
                <span>已补{{item.price - item.discount_price}}</span>
            </view>
        </view>
    </view>
</view>