.index-tabs {
  width: 100%;
}
.index-tabs .tabs-box {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}
.index-tabs .tabs-box .tab-item {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-tabs .tabs-box .tab-item image {
  width: 100rpx;
  height: 100rpx;
}
.index-tabs .tabs-box .tab-item span {
  margin-top: 20rpx;
  color: #525555;
}
